{
  "name": "carbon-icons",
  "version": "5.1.2",
  "description": "SVG icons as sprite for Bluemix",
  "main": "carbon-icons.js",
  "private": false,
  "scripts": {
    "dev": "nodemon -e html,svg server.js",
    "prebuild": "gulp clean",
    "build:bluemix-icons": "gulp build && gulp copy && gulp build:json",
    "build:legacy": "gulp build:svgSprite --legacy && gulp copy --legacy && gulp build:json --legacy",
    "build": "npm-run-all --parallel build:*",
    "test": "jest",
    "commitmsg": "validate-commit-msg",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commit": "git cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/carbon-design-system/carbon-icons"
  },
  "keywords": [
    "icons",
    "bluemix",
    "ibm"
  ],
  "files": [
    "bluemix-icons.js",
    "bluemix-icons.json",
    "bluemix-icons.svg",
    "carbon-icons.js",
    "carbon-icons.json",
    "carbon-icons.svg",
    "dist",
    "icons.json",
    "legacy-icons.js",
    "scripts",
    "sprite.svg"
  ],
  "maintainers": [
    {
      "name": "Brian Han <@hellobrian>",
      "email": "hellobrianhan@gmail.com"
    }
  ],
  "license": "ISC",
  "devDependencies": {
    "chalk": "1.1.3",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "del": "2.2.0",
    "express": "4.13.4",
    "gh-pages": "0.11.0",
    "gulp": "3.9.0",
    "gulp-dom": "0.9.0",
    "gulp-gh-pages": "0.5.4",
    "gulp-rename": "1.2.2",
    "gulp-svg-sprite": "1.2.18",
    "gulp-svgo": "1.0.3",
    "gulp-util": "3.0.7",
    "html": "^1.0.0",
    "husky": "^0.13.3",
    "jest": "16.0.2",
    "nodemon": "1.9.2",
    "npm-run-all": "^4.0.2",
    "remove-svg-properties": "0.3.2",
    "semantic-release": "^6.3.6",
    "svgxuse": "1.1.16",
    "validate-commit-msg": "^2.12.1",
    "xml2js": "0.4.17"
  },
  "config": {
    "validate-commit-msg": {
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "Subject does not match subject pattern!",
      "types": [
        "build",
        "chore",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "ci"
      ],
      "warnOnFail": false
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
